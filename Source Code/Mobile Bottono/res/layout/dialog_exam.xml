<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyTextView
                android:id="@+id/exam_dialog_quantity"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="03/05"
                android:textColor="@color/gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/exam_dialog_exam_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Thi cuối kì Lịch Sử"
                android:textColor="@color/gray"
                android:textSize="17dp"
                android:textStyle="bold" />

            <uet.invincible.customize.MyTextView
                android:id="@+id/exam_dialog_timer"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="09:15"
                android:textColor="@color/gray"
                android:textSize="14dp" />
        </LinearLayout>

        <uet.invincible.customize.MyTextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/gray_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/exam_dialog_avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/avatar_0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Name: "
                        android:textColor="@color/iconchecked"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <uet.invincible.customize.MyTextView
                        android:id="@+id/exam_dialog_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Vũ Việt Anh"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Code: "
                        android:textColor="@color/iconchecked"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <uet.invincible.customize.MyTextView
                        android:id="@+id/exam_dialog_student_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="12020010"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Class: "
                        android:textColor="@color/iconchecked"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <uet.invincible.customize.MyTextView
                        android:id="@+id/exam_dialog_student_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="K57CLC"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <uet.invincible.customize.MyTextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/gray_light" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/dialog_exam_qa_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/exam_dialog_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu hỏi 1:"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <uet.invincible.customize.MyTextView
                    android:id="@+id/exam_dialog_question_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày 10/10 chính thức là ngày giải phóng thủ đô Hà Nội, nước Việt Nam dân chủ cộng hòa. Bạn hãy cho biết ngày quốc khánh của Mỹ là ngày nào ?"
                    android:textColor="@color/gray"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical" >

                <uet.invincible.customize.MyEditText
                    android:id="@+id/exam_dialog_answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bound"
                    android:gravity="top"
                    android:hint="Type answer here"
                    android:padding="8dp"
                    android:textColor="@color/gray"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_exam_score"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="Score: 8.50"
            android:textColor="@color/iconchecked"
            android:textSize="40dp" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/dialog_exam_loading"
            android:layout_width="match_parent"
            android:layout_height="200dp"
			android:gravity="center"
			android:text="Generating question ..."
			android:textColor="@color/gray"
			android:textSize="16dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dialog_exam_submit_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exam_dialog_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:height="40dp"
            android:text="Voice"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/exam_dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:height="40dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>