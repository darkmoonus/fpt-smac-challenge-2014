<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <uet.invincible.customize.MyEditText
            android:id="@+id/fragment_wabo_controler_ed_x"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="X"
            android:textSize="15dp" />

        <uet.invincible.customize.MyEditText
            android:id="@+id/fragment_wabo_controler_ed_y"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Y"
            android:textSize="15dp" />

        <uet.invincible.customize.MyEditText
            android:id="@+id/fragment_wabo_controler_ed_theta"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Theta"
            android:textSize="15dp" />

        <uet.invincible.customize.MyEditText
            android:id="@+id/fragment_wabo_controler_ed_speed"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Speed"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_wabo_controler_move_to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Move to"
            android:textColor="@color/white" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_wabo_controler_move_speed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Move speed"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_wabo_controler_putobj"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Put object"
            android:textColor="@color/white" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_wabo_controler_getobj"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Get object"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <uet.invincible.customize.MyEditText
            android:id="@+id/fragment_wabo_controler_ed_closer_object_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Object id"
            android:textSize="15dp" />
    </LinearLayout>

    <uet.invincible.customize.MyTextView
        android:id="@+id/fragment_wabo_controler_move_closer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="Move closer"
        android:textColor="@color/white" />

    <uet.invincible.customize.MyTextView
        android:id="@+id/fragment_wabo_controler_arm_init"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="Arm init"
        android:textColor="@color/white" />
    
    <uet.invincible.customize.MyTextView
        android:id="@+id/fragment_wabo_controler_wakeup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="Wake up"
        android:textColor="@color/white" />
    
    <uet.invincible.customize.MyTextView
        android:id="@+id/fragment_wabo_controler_stop_move"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="Stop move"
        android:textColor="@color/white" />

</LinearLayout>