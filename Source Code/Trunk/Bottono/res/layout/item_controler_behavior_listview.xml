<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <uet.invincible.customize.MyTextView
            android:id="@+id/item_controler_behavior_listview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:textStyle="bold" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/item_controler_behavior_listview_play"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/control_camera_play" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/item_controler_behavior_listview_stop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/control_camera_stop" />
    </LinearLayout>

    <uet.invincible.customize.MyTextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray_light" />

</LinearLayout>