<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_student_manager_add"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/student_magager_add" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_student_manager_delete_all"
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/delete" />

        <uet.invincible.customize.MyEditText
            android:id="@+id/fragment_student_manager_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bound"
            android:hint="Search students"
            android:lines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/gray"
            android:textCursorDrawable="@null"
            android:textSize="14dp" />

        <uet.invincible.customize.MyTextView
            android:id="@+id/fragment_student_manager_search_button"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@drawable/search"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_student_manager_add_student_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Add student"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Student name"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_uid"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Student id"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Student code"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_age"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:textColor="@color/gray"
                android:textSize="15dp" >

                <requestFocus />
            </uet.invincible.customize.MyEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_class"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Class"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_mobile"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Mobile phone"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bound"
            android:gravity="center"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyEditText
                android:id="@+id/fragment_student_manager_add_student_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Address"
                android:textColor="@color/gray"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <uet.invincible.customize.MyCheckbox
                android:id="@+id/fragment_student_manager_add_student_checkbox_male"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="true" />

            <uet.invincible.customize.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Male"
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <uet.invincible.customize.MyCheckbox
                android:id="@+id/fragment_student_manager_add_student_checkbox_female"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:checked="false" />

            <uet.invincible.customize.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Female"
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <uet.invincible.customize.MyTextView
                android:id="@+id/fragment_student_manager_add_student_create"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <uet.invincible.libs.pulltorefresh.PullToRefreshListView
        android:id="@+id/fragment_student_manager_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:divider="@null"
        android:scrollbars="none" >
    </uet.invincible.libs.pulltorefresh.PullToRefreshListView>

</LinearLayout>